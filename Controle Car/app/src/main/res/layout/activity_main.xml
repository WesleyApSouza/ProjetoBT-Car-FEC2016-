<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:background="#ffffff">


<!-- This library requires pair of the VerticalSeekBar and VerticalSeekBarWrapper classes -->
<com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/view">
    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
        android:id="@+id/barFrente"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max = "255"
        app:seekBarRotation="CW270"
        android:indeterminate="false" /> <!-- Rotation: CW90 or CW270 -->
</com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

<com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">
    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
        android:id="@+id/barRe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:seekBarRotation="CW270"
        android:max = "255"
        android:visibility="invisible"
        android:indeterminate="false" /> <!-- Rotation: CW90 or CW270 -->
</com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="P"
    android:id="@+id/btnParado"
    android:layout_marginLeft="30dp"
    android:layout_marginStart="30dp"
    android:layout_above="@+id/btnRe"
    android:layout_toRightOf="@+id/view"
    android:layout_toEndOf="@+id/view"
    android:background="#303F9F"
    android:textColor="#ffffff" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="R"
    android:id="@+id/btnRe"
    android:layout_above="@+id/btnFrente"
    android:layout_alignLeft="@+id/btnParado"
    android:layout_alignStart="@+id/btnParado"
    android:background="#303F9F"
    android:textColor="#ffffff" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="D"
    android:id="@+id/btnFrente"
    android:layout_centerVertical="true"
    android:layout_alignLeft="@+id/btnRe"
    android:layout_alignStart="@+id/btnRe"
    android:background="#303F9F"
    android:textColor="#ffffff" />

<SeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/barDirection"
    android:progress="90"
    android:layout_below="@+id/btnFrente"
    android:layout_marginLeft="192dp"
    android:max="180"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="frente"
    android:id="@+id/btnTxtIndicaPos"
    android:layout_alignBottom="@+id/btnRe"
    android:layout_alignLeft="@+id/barDirection"
    android:layout_alignStart="@+id/barDirection"
    android:layout_marginLeft="57dp"
    android:layout_marginStart="57dp"
    android:textColor="#000000" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="lista_conex_es"
    android:id="@+id/btnListaConexao"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/barDirection"
    android:layout_alignEnd="@+id/barDirection"
    android:background="#303F9F"
    android:textColor="#ffffff" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="dispositivo_nenhum"
    android:id="@+id/txtTestBar"
    android:textColor="#000000"
    android:layout_toLeftOf="@+id/btnListaConexao"
    android:layout_toStartOf="@+id/btnListaConexao"
    android:textSize="18sp"
    android:layout_alignParentTop="true"
    android:layout_above="@+id/btnParado" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="conectar"
    android:id="@+id/btnConnect"
    android:background="#303F9F"
    android:textColor="#ffffff"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/btnListaConexao"
    android:layout_toStartOf="@+id/btnListaConexao"
    android:layout_marginRight="52dp"
    android:layout_marginEnd="52dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="desconectar"
    android:id="@+id/btnDesconectar"
    android:background="#303F9F"
    android:textColor="#ffffff"
    android:textAlignment="center"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/btnListaConexao"
    android:layout_toStartOf="@+id/btnListaConexao"
    android:layout_marginRight="52dp"
    android:layout_marginEnd="52dp"
    android:visibility="invisible"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farol"
        android:id="@+id/idFarol"
        android:checked="false"
        android:layout_above="@+id/btnRe"
        android:layout_alignLeft="@+id/idNeon"
        android:layout_alignStart="@+id/idNeon" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neon"
        android:id="@+id/idNeon"
        android:layout_below="@+id/idFarol"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

</RelativeLayout>

